{
  "name": "extractify",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/node": "^22.13.14",
      "better-auth": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @extractify/db db:push",
    "db:studio": "turbo -F @extractify/db db:studio",
    "db:generate": "turbo -F @extractify/db db:generate",
    "db:migrate": "turbo -F @extractify/db db:migrate",
    "db:start": "turbo -F @extractify/db db:start",
    "db:watch": "turbo -F @extractify/db db:watch",
    "db:stop": "turbo -F @extractify/db db:stop",
    "db:down": "turbo -F @extractify/db db:down",
    "check": "biome check --write .",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only"
  },
  "dependencies": {
    "@extractify/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@extractify/config": "workspace:*",
    "@types/node": "catalog:",
    "lefthook": "^2.0.13",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.3"
}
